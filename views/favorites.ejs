<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./results.css">
    <link rel="stylesheet" href="/nav.css">
    <title>Favorites</title>
</head>
<body>
    
    <%- include('partials/nav'); %>

    <div class="wrapper">
        <% if(!data.favoriteImages[0]) {%>
            <p> <%=  "Nothing to show" %> </p>
        <% } %>
        <% data.favoriteImages.forEach(result => {%>
            <div class="card">
                <div class="image">
                    <a href="./result/<%= result.id %>">
                        <img src="./images/mini/<%= result.file_name %>" alt="image-<%= result.id %>" width="300">
                    </a>
                </div>
                <div class="date">
                    <p>Date: <%= result.date %></p>
                </div>
                <div class="btns">
                    <a class="del" href="/del_main/<%= result.id %>">Delete</a>
                    <a href="/unfavorite/<%= result.id %>">ðŸ§¡</a>
                </div>
            </div>
        <% }) %>
        </div>
</body>
</html>